generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  emailValidated Boolean   @default(false)
  email_sent     Boolean   @default(false)
  password       String
  name           String
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  deleted_at     DateTime?

  @@map(name: "users")
}

model Audists {
  id         String    @id @default(uuid())
  id_class   String
  class_name String
  data       String
  type       String
  user       String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  // role String
  // permissions String
  @@map(name: "audists")
}
